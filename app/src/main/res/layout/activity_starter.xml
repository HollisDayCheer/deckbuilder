<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_above="@+id/activity_starter_progress_bar"
        android:id="@+id/activity_starter_button"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/activity_starter_text"
    android:text="Downloading"
    android:layout_below="@id/activity_starter_progress_bar"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_starter_standard_check_box"
        android:text="standard"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_starter_modern_check_box"
        android:text="Modern"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_starter_legacy_check_box"
        android:text="Legacy"/>
</LinearLayout>
<ProgressBar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/activity_starter_progress_bar"
    android:layout_centerInParent="true"
    android:visibility="invisible"
    style="@android:style/Widget.Material.ProgressBar.Horizontal"/>
</RelativeLayout>